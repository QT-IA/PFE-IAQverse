# IAQverse Configuration
# Copy this file to .env and adjust values as needed

# Application
APP_NAME=IAQverse
APP_VERSION=2.0.0
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# InfluxDB Configuration
INFLUXDB_ENABLED=false
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-secret-token-here
INFLUXDB_ORG=iaqverse
INFLUXDB_BUCKET=iaq_data

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# MQTT Configuration (Optional)
MQTT_ENABLED=false
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=iaqverse

# ML Services
ML_PREDICTOR_INTERVAL=600  # 10 minutes
ML_TRAINER_INTERVAL=86400  # 24 hours
ML_FORECAST_MINUTES=30

# Data Retention
DATA_RETENTION_DAYS=90
MAX_MEMORY_RECORDS=10000
